/**index.wxss**/

page {
  padding-top: 54rpx;
  background-color: #f6f6f6;
  padding-bottom: 60rpx;
}

.header-img {
  width: 100%;
  height:max-content
}

.top_tip {
  margin-top: 0px;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #888888;
  margin-bottom: 38rpx;
}

.power {
  margin-top: 30rpx;
  border-radius: 5px;
  background-color: white;
  width: 93%;
  padding-bottom: 1rpx;
}

.power_info {
  display: flex;
  padding: 30rpx 25rpx;
  align-items: center;
  justify-content: space-between;
}

.power_info_more {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(90deg);
}

.power_info_less {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(270deg);
}

.power_info_text {
  display: flex;
  flex-direction: column;
}

.power_info_text_title {
  margin-bottom: 10rpx;
  font-weight: 400;
  font-size: 35rpx;
}

.power_info_text_tip {
  color: rgba(0, 0, 0, 0.4);
  font-size: 25rpx;
}

.power_item {
  padding: 30rpx 25rpx;
  display: flex;
  justify-content: space-between;
}

.power_item_title {
  font-size: 30rpx;
}

.power_item_icon {
  width: 30rpx;
  height: 30rpx;
}

.line {
  width: 95%;
  margin: 0 auto;
  height: 2rpx;
  background-color: rgba(0, 0, 0, 0.1);
}

.environment {
  color: rgba(0, 0, 0, 0.4);
  font-size: 24rpx;
  margin-top: 25%;
}

.reminder {
  display: flex;
  width: 290px;
  align-items: center;
  padding: 10px;
  border-radius: 10px;
  background-color: #ffffff;
  box-shadow: 0px 0px 5px 0px rgba(250, 8, 129, 0.219);
  margin-bottom: 5px;
  justify-content: space-around;
}

.created, .assigned {
  font-size: 12px;
  color: #666;
  margin-bottom: 2px;
}

.title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}

.app-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 0px;
}


.info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 200px;
  /* margin-left: 10px */
}

.icon {
  width: 50px;
  height: 50px;
  
  /* margin-left: 120px; */
}

.reminder-heading {
  font-size: 12px;
  font-weight: bold;
  margin-bottom: 16px;
  margin-top: 10px;
  align-self: start;
}

.reminder-btn {
  background-color: #ff99aa;
  color: black;
  padding: 8px 12px;
  margin-top: 10px;
  margin-bottom: 20px;
  border-radius: 4px;
  border: none;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.weather-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20px;
  width: 100%;
  box-sizing: border-box;
  background-color: #f7f7f7;
}

.info-container {
  display: flex;
  width: 290px;
  align-items: center;
  padding: 10px;
  border-radius: 10px;
  background-color: #ffffff;
  box-shadow: 0px 0px 5px 0px rgba(8, 179, 247, 0.219);
  margin-bottom: 5px;
  justify-content: space-around;
}