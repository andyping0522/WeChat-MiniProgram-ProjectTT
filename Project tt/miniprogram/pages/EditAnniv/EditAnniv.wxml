<!--pages/EditAnniv/EditAnniv.wxml-->
<view class="form-group">
  <view>
    <view>标题：</view>
    <input bindinput="onTitleInput" value="{{title}}" />
    <view class="section_title">选择纪念日日期</view>
    <picker mode="date" bindchange="onDateInput" value="{{date}}">
      <view class="picker">
        已选：{{date}}
      </view>
    </picker>
    <button hover-class="btn-hover" size="mini" bindtap="onSubmit">更新纪念日</button>
    <button hover-class="btn-hover" size="mini" bindtap="onDelete">删除纪念日</button>
    <button hover-class="btn-hover" size="mini" bindtap="onCancel">返回</button>
  </view>
</view>
