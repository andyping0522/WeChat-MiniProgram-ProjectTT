.form-group {
  margin-top: 20px;
  margin-bottom: 42px;
}

label {
  display: block;
  margin-top: 10px;
  margin-bottom: 8px;
  font-weight: bold;
}

input[type="text"],
textarea {
  width: 100%;
  height: 28px;
  padding: 8px;
  font-size: 16px;
  border-radius: 4px;
  border: 1px solid #ddd;
  box-sizing: border-box;
}

.picker-container {
  position: relative;
  margin-bottom: 50px;
}

