.my-picker::-webkit-scrollbar {
  width: 5px;
  height: 5px;
}

.my-picker::-webkit-scrollbar-thumb {
  background-color: #ddd;
  border-radius: 5px;
}

.picker-label {
  position: absolute;
  top: 0;
  left: 0px;
  width: 180px;
  height: 24px;
  margin-top: 15px;
  /* transform: translateY(-50%); */
  background-color: white;
  padding: 0 8px;
  font-size: 14px;
  text-align: center;
  color: #aaa;
}

.submit-btn {
  background-color: #ff99aa;
  color: black;
  padding: 8px 12px;
  margin-top: 100px;
  margin-bottom: 20px;
  border-radius: 4px;
  border: none;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}



